<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEF3F2"
    android:fillViewport="false">

    <RelativeLayout
        android:id="@+id/block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#19F1E6E6">

        <include
            android:id="@+id/included_toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/included_toolbar"
            android:layout_margin="10dp"
            android:background="#85808080"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="400dp"
                android:layout_height="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintVertical_bias="0.199">

            </androidx.viewpager2.widget.ViewPager2>

            <LinearLayout
                android:id="@+id/lay_indicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.43">

            </LinearLayout>


            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_round" />


            <androidx.cardview.widget.CardView
                android:id="@+id/block1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:cardElevation="10dp"
                app:strokeColor="@color/cardview_dark_background"
                app:strokeWidth="2dp">


                <TextView
                    android:id="@+id/shop_na"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="ABC Shop Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/block2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"

                android:layout_marginTop="2dp"

                android:layout_weight="1"

                app:cardElevation="10dp"
                app:strokeColor="@color/cardview_dark_background"
                app:strokeWidth="2dp">


                <TextView
                    android:id="@+id/shop_na2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="XYZ Shop Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/block3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"

                android:layout_marginTop="2dp"

                android:layout_weight="1"

                app:cardElevation="10dp"
                app:strokeColor="@color/cardview_dark_background"
                app:strokeWidth="2dp">


                <TextView
                    android:id="@+id/shop_na3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="ABC Shop Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/block5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"

                android:layout_marginTop="2dp"

                android:layout_weight="1"
                app:cardElevation="10dp"
                app:strokeColor="@color/cardview_dark_background"
                app:strokeWidth="2dp">


                <TextView
                    android:id="@+id/shop_na5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="XYZ Shop Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/block6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"

                android:layout_marginTop="2dp"

                android:layout_weight="1"

                app:cardElevation="10dp"
                app:strokeColor="@color/cardview_dark_background"
                app:strokeWidth="2dp">


                <TextView
                    android:id="@+id/shop_na6"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="ABC Shop Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/block7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"

                android:layout_marginTop="2dp"

                android:layout_weight="1"

                app:cardElevation="10dp"
                app:strokeColor="@color/cardview_dark_background"
                app:strokeWidth="2dp">


                <TextView
                    android:id="@+id/shop_na7"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:text="XYZ Shop Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
